<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rid"
        android:text="Id"
        android:textSize="22sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rname"
        android:text="Name"
        android:textSize="22sp"
        android:layout_below="@+id/rid"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rmail"
        android:text="Mail"
        android:textSize="22sp"
        android:layout_below="@+id/rname"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rnumber"
        android:text="Number"
        android:inputType="number"
        android:textSize="22sp"
        android:layout_below="@+id/rmail"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_below="@id/rnumber"
       android:gravity="center">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/ruimage"
           android:src="@drawable/ic_edit_black_24dp"
           android:layout_below="@id/rnumber"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/rdimage"
           android:src="@drawable/ic_delete_black_24dp"
           android:layout_below="@+id/ruimage"/>
   </LinearLayout>


</RelativeLayout>